<% if(success.length) { %>
    <div class="row my-3">
        <div class="col-md-6 col-10 offset-1 alert alert-success alert-dismissible fade show text-center" role="alert">
            <%= success %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>
    <% } %>

        <% if(error.length) { %>
            <div class="row my-3">
                <div class="col-md-6 col-10 offset-1 alert alert-danger alert-dismissible fade show text-center"
                    role="alert">
                    <%= error %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
            <% } %>